{
	"name": "parcel-reactjs-electron",
	"version": "1.0.0",
	"description": "A minimal React.js boilerplate with parcel as bundler",
	"main": "main.js",
	"scripts": {
		"start": "yarn parcel && yarn electron",
		"parcel": "parcel build ./src/index.html -d build/ --target=electron --public-url ./",
		"electron": "electron .",
		"pack": "yarn parcel && yarn build",
		"build": "electron-builder",
		"dev": "parcel ./src/index.html -d build/",
		"postinstall": "electron-builder install-app-deps"
	},
	"build": {
		"appId": "parcel.reactjs.electron",
		"mac": {
			"category": "your.app.category.type"
		},
		"files": [
			"main.js",
			"build/*"
		]
	},
	"license": "MIT",
	"dependencies": {
		"react": "^16.2.0",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"babel-eslint": "*",
		"babel-preset-env": "*",
		"babel-preset-react": "*",
		"electron": "^1.7.8",
		"electron-builder": "*",
		"electron-reload": "*",
		"eslint": "*",
		"eslint-plugin-jsx": "*",
		"eslint-plugin-react": "*",
		"parcel-bundler": "*"
	}
}